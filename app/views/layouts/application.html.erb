<!DOCTYPE html>
<html>
<head>
  <title>My Meetings</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
</head>

<body>
<nav class="navbar navbar-expand-lg navbar-light bg-light">
  <a class="navbar-brand" href="/">My Meetings</a>
  <% if employee_signed_in? %>
    <div class="collapse navbar-collapse">
      <ul class="navbar-nav mr-auto">
        <li class="nav-item">
          <a class="nav-link" href="/">Home</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/rooms">Rooms</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/meetings/new">Schedule</a>
        </li>
        <li class="nav-item left">
          <%= link_to 'Sign Out', destroy_employee_session_path, method: :delete, class: 'nav-link' %>
        </li>
      </ul>
    </div>
  <% end %>
</nav><br>

<div class="container">
  <% if flash[:notice] %>
    <div class="alert alert-success">
      <%= flash[:notice] %>
    </div>
  <% end %>
  <%= yield %>
</div>

<br><nav class="navbar navbar-expand-lg navbar-light bg-light"></nav>
</body>

</html>
