<%= form_with(model: meeting, local: true) do |form| %>
  <% if meeting.errors.any? %>
    <% meeting.errors.full_messages.each do |message| %>
      <div class="alert alert-success">
        <%= message %>
      </div>
    <% end %>
  <% end %>

  <div class="form-group">
    <%= form.label :title %>
    <%= form.text_field :title, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :participants %>
    <%= form.text_area :participants, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :location %>
    <%= form.collection_select(:conference_room_id, ConferenceRoom.all, :id, :name, {}, {class: 'form-control'}) %>
  </div>

  <div class="form-group">
    <%= form.label :date %>
    <%= form.date_field :date, class: 'form-control' %>
  </div>

  <div class="form-group">
    <div class="row">
      <div class="col">
        <%= form.label 'Start Time' %>
        <%= form.time_field :start_time, class: 'form-control' %>
      </div>
      <div class="col">
        <%= form.label 'End Time' %>
        <%= form.time_field :end_time, class: 'form-control' %>
      </div>
    </div>
  </div>

  <div class="form-group">
    <%= form.label :agenda %>
    <%= form.text_area :agenda, class: 'form-control' %>
  </div>

  <button type="submit" class="btn btn-primary">Create</button>
  <%= link_to 'Back', :back, class: "btn btn-primary" %>
<% end %>
